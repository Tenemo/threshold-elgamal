{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2020",
        "module": "esnext",
        "noEmit": false,
        "declaration": true,
        "sourceMap": false,
        "removeComments": false,
        "esModuleInterop": false
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts",
        "eslint.config.js",
        "jsdoc.config.js"
    ]
}
